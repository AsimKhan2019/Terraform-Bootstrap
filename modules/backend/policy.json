{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::BUCKET_NAME",
      "Principal": {
        "AWS": [
          "arn:aws:iam::0123456:user/john.nowak"
        ]
      }
    },
    {
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:PutObject"],
      "Resource": "arn:aws:s3:::BUCKET_NAME/terraform.tfstate",
      "Principal": {
        "AWS": [
          "arn:aws:iam::0123456:user/john.nowak"
        ]
      }
    }
  ]
}
